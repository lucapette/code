{
  "name": "lucapette-website",
  "version": "1.0.0",
  "main": "src/assets/js/main.js",
  "scripts": {
    "build": "npm run js:build && eleventy",
    "serve": "npm run js:build && NODE_ENV=development eleventy --serve --incremental",
    "js:build": "esbuild src/assets/js/main.js --bundle --outfile=src/assets/js/main.bundle.js --format=esm --target=es2020",
    "prettier:check": "prettier --check '**/*.{ts,js,css,scss,html}'",
    "prettier:write": "prettier --write '**/*.{ts,js,css,scss,html}'",
    "css:build": "sass src/assets/scss:src/assets/css --style compressed"
  },
  "type": "module",
  "dependencies": {
    "include-media": "^2.0.0",
    "lucide": "0.381.0",
    "nord": "^0.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.1.2",
    "@11ty/eleventy-plugin-handlebars": "1.0.0",
    "esbuild": "^0.27.3",
    "lucide-static": "^0.563.0",
    "postcss": "^8.4.38",
    "postcss-cli": "11.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-go-template": "^0.0.15",
    "sass": "^1.77.8"
  }
}
