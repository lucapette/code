{
  "name": "lucapette-website",
  "version": "1.0.0",
  "main": "src/assets/js/main.js",
  "scripts": {
    "build": "npm run css:build && npm run js:build && eleventy",
    "dev": "concurrently \"npm run watch:js\" \"npm run watch:css\" \"NODE_ENV=development eleventy --serve --incremental\"",
    "serve": "NODE_ENV=development eleventy --serve --incremental",
    "watch:js": "esbuild src/assets/js/main.js --bundle --outfile=_site/assets/js/main.bundle.js --format=esm --target=es2020 --watch",
    "watch:css": "sass src/assets/scss/main.scss:src/assets/css/bundle.css --style compressed --no-source-map --watch",
    "prettier:check": "prettier --check '**/*.{ts,js,css,scss,html}'",
    "prettier:write": "prettier --write '**/*.{ts,js,css,scss,html}'",
    "css:build": "sass src/assets/scss/main.scss:src/assets/css/bundle.css --style compressed --no-source-map",
    "js:build": "esbuild src/assets/js/main.js --bundle --outfile=_site/assets/js/main.bundle.js --format=esm --target=es2020"
  },
  "type": "module",
  "dependencies": {
    "@11ty/eleventy-img": "^6.0.4",
    "include-media": "^2.0.0",
    "lucide": "0.381.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "lucide-static": "^0.563.0",
    "prettier": "^3.2.5",
    "sass": "^1.77.8"
  }
}
