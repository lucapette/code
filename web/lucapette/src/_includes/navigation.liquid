<header>
  <nav aria-label="Main navigation">
    <button id="mobile-menu-toggle" class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="menu-icon" aria-hidden="true">{% lucide "menu" %}</span>
      <span class="close-icon" aria-hidden="true">{% lucide "x" %}</span>
    </button>
    <ul id="nav-menu">
      {% assign section = page.url | split: '/' | shift | first %}
      <li>
        <a
          href="/"
          {% if page.url == '/' %}
            aria-current="page"
          {% endif %}
          >Home</a
        >
      </li>
      <li>
        <a
          href="/writing/"
          {% if section == 'writing' %}
            aria-current="page"
          {% endif %}
          >Writing</a
        >
      </li>
      <li>
        <a
          href="/notes/"
          {% if section == 'notes' %}
            aria-current="page"
          {% endif %}
          >Notes</a
        >
      </li>
      <li>
        <a
          href="/about/"
          {% if section == 'about' or section == 'credits' or section == 'hire-me' %}
            aria-current="page"
          {% endif %}
          >About</a
        >
      </li>
    </ul>
    <button id="toggle">
      <span class="moon" aria-hidden="true">{% lucide "moon" %}</span>
      <span class="sun" aria-hidden="true">{% lucide "sun" %}</span>
      <span class="sr-only">toggle theme</span>
    </button>
  </nav>
</header>
